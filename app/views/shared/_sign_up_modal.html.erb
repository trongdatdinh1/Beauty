  <div class="modal fade" id="sign_up" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
          </button>
          <h4 class="modal-title"><%= t "devise.registrations.title" %></h4>
        </div>
        <div class="modal-body">
          <%= form_for resource, as: :user,
            url: registration_path(:user) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true,
                placeholder: t("devise.registrations.email"),
                class: "form-email form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password,
                placeholder: t("devise.registrations.password"),
                class: "form-password form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation,
                placeholder: t("devise.registrations.confirm_pass"),
                class: "form-password form-control" %>
            </div>
            <%= f.fields_for :profile do |p| %>
              <div class="form-group">
                <%= p.text_field :name,
                  placeholder: t("devise.registrations.name"),
                  class: "form-password form-control" %>
              </div>
            <% end %>
            <div class="form-group">
              <div class="actions">
                <%= f.submit t("devise.registrations.title"),
                  class: "btn form-control" %>
              </div>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t "close" %>
          </button>
        </div>
      </div>
    </div>
  </div>
