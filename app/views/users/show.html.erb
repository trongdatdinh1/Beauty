<div class="row user-profile">
  <div class="col-md-9">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title"><%= @user.profile.name %></h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-3 col-lg-3" align="center">
                <%= image_tag @user.profile.avatar.url,
                  class: "img-circle img-responsive" %>
              </div>
              <div class="col-md-9 col-lg-9">
                <table class="table table-user-information">
                  <tbody>
                    <tr>
                      <td><%= t "users.show.age" %></td>
                      <td><%= @user.profile.age %></td>
                    </tr>
                    <tr>
                      <td><%= t "users.show.phone_number" %></td>
                      <td><%= @user.profile.phone_number %></td>
                    </tr>
                    <tr>
                      <td><%= t "users.show.address" %></td>
                      <td><%= @user.profile.address %></td>
                    </tr>
                    <tr>
                      <td><%= t "users.show.job" %></td>
                      <td><%= @user.profile.job %></td>
                    </tr>
                    <tr>
                      <td><%= t "users.show.average" %></td>
                      <td><div class="average-review-rating"
                        data-score=<%= @supports.average_review %>></div></td>
                    </tr>
                    <tr>
                      <td><span class="number-of-reviews">
                        <%= t "users.show.base" %> </span></td>
                      <td><%= @supports.reviews.count %>
                        <%= t "users.show.reviews" %></td>
                    </tr>
                  </tbody>
                </table>
                <% if user_signed_in? %>
                  <% unless @supports.check_review current_user, @user %>
                    <li><%= link_to t("users.show.add"), "",
                      "data-toggle": "modal", "data-target": "#review-modal" %>
                    </li>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab11" data-toggle="tab">
              <%= t "users.show.reviews" %></a></li>
            <li><a href="#tab12" data-toggle="tab">Posts</a></li>
            <li><a href="#tab13" data-toggle="tab">Comments</a></li>
            <li><a href="#tab14" data-toggle="tab">Reviewed</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab11">
              <div class="reviews">
                <% if @supports.reviews.any? %>
                  <%= render @supports.reviews %>
                <% end %>
              </div>
            </div>
            <div class="tab-pane" id="tab12">
              <div class="col-md-12">
                <%= render @user.posts %>
              </div>
            </div>
            <div class="tab-pane" id="tab13">
              <div class="col-md-12">
                <%= render @supports.user_commented %>
              </div>
            </div>
            <div class="tab-pane" id="tab14">
              <div class="col-md-12">
                <%= render @supports.reviewed_users %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% if user_signed_in? %>
  <%= render "reviews/review_modal", user: @user,
    review: @supports.review_of(current_user)  %>
<% end %>
