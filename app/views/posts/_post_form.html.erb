<div class="col-md-9 col-md-offset-2">
  <div class="post-form">
    <%= form_for post, html: {multipart: true} do |f| %>

      <div class="form-group">
        <%= f.file_field :post_img, accept: "image/jpeg,image/gif,image/png" %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true, class: "form-control",
          required: true %>
      </div>

      <div class="form-group">
        <%= f.label :content, t("posts.post_form.descrip") %>
        <%= f.text_area :content, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <div class="actions">
          <%= f.submit yield(:button_text), class: "btn form-control" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

