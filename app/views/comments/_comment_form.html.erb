<% if user_signed_in? && post.opened? %>
  <% if check_depth(parent_id) < 2 %>
    <span id="form-comment">
      <%= form_for [post, comment_new] do |f| %>
        <%= f.hidden_field :parent_id, value: parent_id %>
        <%= f.hidden_field :post_id, value: post.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.text_area :content, placeholder: t("posts.show.compose"),
          required: true, class: "form-control" %>
        <%= f.submit t("posts.show.comment"), class: "btn btn-xs btn-custom2" %>
      <% end %>
    </span>
  <% end %>
<% end %>
