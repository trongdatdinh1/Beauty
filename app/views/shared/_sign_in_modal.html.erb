  <div class="modal fade" id="sign_in" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
          </button>
          <h4 class="modal-title"><%= t "devise.sessions.title" %></h4>
        </div>
        <div class="modal-body">
          <%= form_for resource, as: :user,
            url: session_path(:user) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true,
                placeholder: t("devise.registrations.email"),
                class: "form-email form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autofocus: true,
                placeholder: t("devise.registrations.password"),
                class: "form-password form-control" %>
            </div>
            <div class="form-group">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </div>
            <div class="form-group">
              <div class="actions">
                <%= f.submit t("devise.sessions.title"),
                  class: "btn form-control" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t "close" %>
          </button>
        </div>
      </div>

    </div>
  </div>
