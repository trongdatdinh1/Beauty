<div class="col-sm-4 col-lg-3 col-md-4">
  <div class="thumbnail">
    <div class=" <%= "sold" if post.closed? %>">
      <%= link_to image_tag(post.post_img.url,
        class: "post-image img-responsive #{'watermark' if post.closed?}"),
        post_path(post) %>
    </div>
    <div class="caption">
        <h4 class="pull-right">$24.99</h4>
        <h4><%= link_to post.title, post_path(post.id) %></h4>
    </div>
    <div class="ratings">
      <p class="pull-right"><%= post.impressionist_count %>views</p>
      <p><%= post.get_likes.size %> likes</p>
    </div>
  </div>
</div>
